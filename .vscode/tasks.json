{
	"version": "2.0.0",
	"tasks": [
		{
			// Start Go Server - Chess Engine
			"label": "Server",
			"type": "shell",
			"command": "go run main.go",
			"group": "build",
			"options": {
				"statusbar": {
					"label": "Server",
					"hide": false,
					"color": "#ff0000",
					"backgroundColor": "#ffffff"
				},
				"isBackground": true
			}
		},
		{
			// Start interface
			"label": "Interface",
			"type": "shell",
			"command": "npm",
			"args": ["run", "dev"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			//"dependsOn": ["Chess Server"],
			"options": {
				"cwd": "${workspaceFolder}/interface",
				"statusbar": {
					"label": "Interface",
					"hide": true,
					"color": "#b52616",
					"backgroundColor": "#ffffff"
				}
			},
			"isBackground": true
		},
		{
			"label": "Run Chess",
			"type": "shell",
			"command": "echo",
			"group": "build",
			"args": ["Starting Backend and Frontend..."],
			"dependsOn": ["Interface", "Server"],
			"options": {
				"statusbar": {
					"label": "Run Chess",
					"color": "#ffffff",
					"backgroundColor": "#ffffff"
				}
			}
		},
		{
			// Benchmark chess engine
			"label": "Benchmark",
			"type": "shell",
			"command": "bash perf/chess_benchmark.sh",
			"group": "test",
			"options": {
				"cwd": "${workspaceFolder}",
				"statusbar": {
					"label": "Benchmarking",
					"hide": false,
					"color": "#000000",
					"backgroundColor": "#ffffff"
				}
			}
		},
		{
			// Test chess engine
			"label": "Test Chess Engine",
			"type": "shell",
			"command": "bash perf/test_chess.sh",
			"group": "test",
			"options": {
				"cwd": "${workspaceFolder}",
				"statusbar": {
					"label": "Test Chess Engine",
					"hide": false,
					"color": "#000000",
					"backgroundColor": "#ffffff"
				}
			}
		}
	]
}
